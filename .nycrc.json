{
  "extends": "@istanbuljs/nyc-config-typescript",
  "all": true,
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/testingHelpers.tsx",
    "src/index.html",
    "_playwright-tests/**"
  ],
  "reporter": [
    "text",
    "lcov",
    "html",
    "text-summary"
  ],
  "report-dir": "coverage-e2e",
  "temp-dir": ".nyc_output",
  "check-coverage": false,
  "branches": 50,
  "lines": 50,
  "functions": 50,
  "statements": 50,
  "sourceMap": true,
  "instrument": true
}
