{
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ESNext",
      "isolatedModules": true,
      "allowJs": true,
      "checkJs": false,
      "jsx": "react-jsx",
      "outDir": "./build",
      "removeComments": true,
      "pretty": true,
      "skipLibCheck": true,
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "noImplicitAny": false,
      "resolveJsonModule": true,
      "sourceMap": true,
      "types": ["node", "jest", "@testing-library/jest-dom"],
      "typeRoots": [
      "node_modules/@types"
      ]
    },
    "include": ["src/**/*.ts", "**/*.tsx"],
    "exclude": ["./node_modules/*", "**/*.js"]
  }
  